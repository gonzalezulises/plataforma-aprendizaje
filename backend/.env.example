# Database
DATABASE_PATH=./data/learning_platform.db

# Server
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Session
SESSION_SECRET=your-session-secret-change-in-production

# OAuth (rizo.ma integration)
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret
OAUTH_CALLBACK_URL=http://localhost:3001/api/auth/callback
OAUTH_AUTHORIZATION_URL=https://rizo.ma/oauth/authorize
OAUTH_TOKEN_URL=https://rizo.ma/oauth/token
OAUTH_USER_INFO_URL=https://rizo.ma/api/user

# JWT
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=24h

# Code Execution (Docker sandbox)
CODE_EXEC_TIMEOUT=30000
CODE_EXEC_MEMORY_LIMIT=256m
CODE_EXEC_CPU_LIMIT=0.5
DOCKER_PYTHON_IMAGE=python:3.11-slim
DOCKER_R_IMAGE=r-base:latest

# Storage (Cloudflare R2 or Backblaze B2)
STORAGE_ENDPOINT=
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
STORAGE_BUCKET=

# Google Meet API (for webinars)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/google/callback

# Email (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@cursos.rizo.ma

# AI Features
OPENAI_API_KEY=
AI_MODEL=gpt-4-turbo-preview
